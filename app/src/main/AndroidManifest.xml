<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.cnu.computer.foodpedia_app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodpediaAPP">
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".AddNewFoodActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="kr.ac.cnu.computer.foodpedia_app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/external" />
        </provider>

        <activity
            android:name=".FoodRecognitionActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <!--        <activity-->
        <!--            android:name=".MainActivity3"-->
        <!--            android:exported="true"-->
        <!--            android:screenOrientation="portrait" />-->
        <activity
            android:name=".FoodNutritionInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="kakaolink"
                    android:scheme="kakao053489b1074ecb68c740377bf397003c" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoodRecordsActivity"
            android:exported="true"
            android:parentActivityName=".FoodRecognitionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CalendarActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="053489b1074ecb68c740377bf397003c" />
    </application>

</manifest>