<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:layout_gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="408dp"
                android:layout_height="298dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout">

            <TextView
                    android:text="2000.00.00. MON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/recordDate"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:textSize="24sp"/>
            <TextView
                    android:text="Calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/calories"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/recordDate" android:layout_marginTop="50dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="119dp"
                    android:layout_height="62dp" app:layout_constraintTop_toBottomOf="@+id/calories"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout8">
                <ImageView
                        android:layout_width="26dp"
                        android:layout_height="25dp" app:srcCompat="@drawable/fire" android:id="@+id/calorieIcon"
                        android:layout_marginStart="10dp" android:layout_marginTop="12dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/eatenCalories"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#000000" android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="273dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="5dp" app:layout_constraintStart_toEndOf="@+id/linearLayout8"
                    app:layout_constraintTop_toBottomOf="@+id/recordDate"
                    android:gravity="center" android:layout_marginTop="5dp" android:id="@+id/linearLayout9">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    <TextView
                            android:text="@string/fat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/infoFat"
                            android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/eatenFat"
                            android:textAlignment="center"/>
                    <!--                        <com.github.mikephil.charting.charts.PieChart-->
                    <!--                                android:id="@+id/pieChartFat"-->
                    <!--                                android:layout_width="match_parent"-->
                    <!--                                android:layout_height="match_parent" />-->
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    <TextView
                            android:text="@string/protein"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/infoProtein"
                            android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/eatenProtein"
                            android:textAlignment="center"/>
                    <!--                        <com.github.mikephil.charting.charts.PieChart-->
                    <!--                                android:id="@+id/pieChartProtein"-->
                    <!--                                android:layout_width="match_parent"-->
                    <!--                                android:layout_height="match_parent" />-->
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    <TextView
                            android:text="@string/carbohydrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/infoCarbohydrate"
                            android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/eatenCarbohydrate"
                            android:textAlignment="center"/>
                    <!--                        <com.github.mikephil.charting.charts.PieChart-->
                    <!--                                android:id="@+id/pieChartCarb"-->
                    <!--                                android:layout_width="match_parent"-->
                    <!--                                android:layout_height="match_parent" />-->
                </LinearLayout>
            </LinearLayout>
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="165dp"
                    android:layout_height="145dp" app:layout_constraintStart_toEndOf="@+id/linearLayout8"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/encouragement"/>
            <TextView
                    android:text="ðŸŽŠ Keep the pace! You're doing great"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/encouragement"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp" android:backgroundTint="#A1E6E6E6"
                    android:background="#ECECEC"
                    android:padding="10dp" android:textColor="#000000" android:paddingStart="10dp"
                    android:textSize="16sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:id="@+id/scrollView2"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">
        <LinearLayout
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"/>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/main"
        app:itemIconSize="@dimen/bottom_navigation_icon_size"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@drawable/menu_selector_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"></com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>